{
  "env": {
    "es2020": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "dist/**",
    "build/**",
    "coverage/**"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  }
}
